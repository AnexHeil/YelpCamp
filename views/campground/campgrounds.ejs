<%include ../partials/header.ejs%>
<%if(currentUser && currentUser.isAdmin){%>
<h1>You're an admin!!!</h1>
<%}%>
<div class = "container">
    <header class = "jumbotron"><h1>Welcome to YelpCamp</h1>
        <div class = "container">
            <p>View our hand-picked campgrounds from all over the world</p>
            <a class = "btn btn-primary btn-lg" href="/campgrounds/new">Add a new one</a>
            <p>
                <form action = "/campgrounds" method = "GET" class = "form-inline">
                    <div class = "form-group">
                        <input class = "form-control" type="text" name="search" placeholder = "Campground search..." value="">
                        <input class = "form-control" type="submit" name="" value="Search">
                    </div>
                </form>
            </p>
        </div>
    </header>
    <h3>Our most popular sights</h3>
    <div class = "row text-center" id="campground-grid">
        <%campgrounds.forEach(function(campground){%>
            <div class = "col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class = "card">
                    <img class = "card-image-top" src="<%=campground.image%>" alt="<%=campground.name%>">
                    <div class = "card-body">
                        <h5 class = "card-title"><%=campground.name%></h5>
                        <a class = "bt-btn-primary" href="/campgrounds/<%=campground._id%>">More info</a>
                    </div>
                </div>
            </div> 
        <%})%>  
    </div>
    <a href="/" style = "">Go back</a>
</div>

<%include ../partials/footer.ejs%>
    
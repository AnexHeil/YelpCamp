<%include ../partials/header.ejs%>
<div class = "container">
    <div class = "row">
        <h1 class = "text-center ">Edit a campground</h1>
        <div style = "width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input type="text" class = "form-control" name="data[name]" value="<%=campground.name%>" placeholder = "Name">
                </div> 
                <div class = "form-group">
                    <input type="text" class = "form-control" name="data[image]" value="<%=campground.image%>" placeholder = "IMG URL">
                </div>
                <div class = "form-group">
                    <input type="text" class = "form-control" name="data[description]" value="<%=campground.description%>" placeholder = "DESCRIPTION">
                </div>
                <div class = "form-group">
                    <input type="number" class = "form-control" name="campground[price]" value="<%=campground.price%>" placeholder = "" min = "0.01" step = "0.01">$
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary  btn-block" type="">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
<%include ../partials/footer.ejs%>